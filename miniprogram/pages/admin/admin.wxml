<view class="page">
  <!-- 头部 -->
  <view class="page__bd">
    <view class="weui-article">
      <view class="weui-article__h1">申请管理员</view>
      <view class="weui-article__p">申请成为管理员</view>
    </view>
  </view>
  <!-- 主体 -->
  <form class="weui-form" bindsubmit="submit" style="padding:0">
    <view class="weui-cells__group weui-cells__group_form">
      <view class="weui-cells__title" style="margin-top:0">您的信息</view>
      <view class="weui-cells weui-cells_form">
        <van-cell-group class="formbox">
          <van-field name="name" label="姓名" placeholder="请填写内容" clearable></van-field>
          <van-field name="class" label="班级" placeholder="请填写内容" clearable></van-field>
          <van-field name="position" label="职位" placeholder="请填写内容" clearable></van-field>
          <van-field
            type="textarea"
            name="remark"
            label="备注"
            placeholder="请填写内容"
            clearable
          ></van-field>
        </van-cell-group>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <button form-type="submit" class="weui-btn weui-btn_primary">提交</button>
    </view>
  </form>
</view>
