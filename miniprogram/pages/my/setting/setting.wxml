<view class="page__bd">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">学号</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{
        userInfo.studentID || "未设置"
      }}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">姓名</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{
        userInfo.studentName || "未设置"
      }}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">邮箱</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{ userInfo.email || "未设置" }}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">权限</view>
      <view wx:if="{{ userInfo.role === 'admin' }}" class="weui-cell__ft">管理员</view>
      <view wx:elif="{{ userInfo.role === 'student' }}" class="weui-cell__ft">学生</view>
      <view wx:else class="weui-cell__ft">未设置</view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="../reg/reg" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">修改信息</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="unbind" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">解绑微信</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>
