<view class="page__bd">
  <navigator
    url="bind/bind"
    class="weui-cells"
    style="margin-top: 0"
  >
    <view class="weui-cell weui-cell_active weui-cell_access">
      <view class="weui-cell__hd" style="position: relative; margin-right: 10px;">
        <open-data
          type="userAvatarUrl"
          style="width: 50px; height:50px; display: block;"
        ></open-data>
      </view>
      <view class="weui-cell__bd">
        <view>
          <text wx:if="{{ userInfo.studentName }}">{{ userInfo.studentName }}</text>
          <open-data wx:else type="userNickName"></open-data>
        </view>
        <view style="font-size: 13px; color: #888;">{{
          userInfo.studentID ? userInfo.studentID : "尚未绑定"
        }}</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{
        userInfo.studentID ? "学生信息" : "绑定信息"
      }}</view>
    </view>
  </navigator>
  <view class="weui-cells__title"> </view>
  <view class="weui-cells weui-cells_after-title">
    <navigator
      wx:if="{{ userInfo.role === 'admin' }}"
      url="/pages/workForm/workForm"
      class="weui-cell weui-cell_access"
      hover-class="weui-cell_active"
    >
      <view class="weui-cell__bd">发布作业</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator
      wx:if="{{ userInfo }}"
      url="/pages/class/class"
      class="weui-cell weui-cell_example weui-cell_access"
      hover-class="weui-cell_active"
    >
      <view class="weui-cell__bd">管理班级</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator
      url="/pages/my/about/about"
      class="weui-cell weui-cell_example weui-cell_access"
      hover-class="weui-cell_active"
    >
      <view class="weui-cell__bd">了解我们</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>
